            <div class="ButtonyContainer">
                @foreach (Stul stul in ViewBag.listStoly)
                {
                   
                    @if (stul.ZbyvajiciMista == 0)
                    {
                        <div class="stul" style="background: red; color: white;"><bold>Stůl: @stul.ID_Stul</bold> <span>(@stul.ZbyvajiciMista z @stul.PocetMist)</span></div>
                    }
                    else if (stul.ZbyvajiciMista == stul.PocetMist)
                    {
                        <div class="stul" style="background: green; color: white;"><bold>Stůl: @stul.ID_Stul</bold> <span>(@stul.ZbyvajiciMista z @stul.PocetMist)</span></div>
                    }
                    else
                    {
                        <div class="stul" style="background: orange; color: white;"><bold>Stůl: @stul.ID_Stul</bold> <span>(@stul.ZbyvajiciMista z @stul.PocetMist)</span></div>
                    }
                }
            </div>
            <div class="VyberPodlazi">
                <a class="VyberButton" asp-controller="Rezervace" asp-action="Prizemi">Přízemí</a>
                <a class="VyberButton" asp-controller="Rezervace" asp-action="Balkon">1. patro</a>
            </div>
        </div>
    </div>
}